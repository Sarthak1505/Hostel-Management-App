<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".hostelmanagment.admin.adminLogin">

    <ImageView
        android:id="@+id/guardView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="556dp"
        android:background="@drawable/guard"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/guard" />

    <TextView
        android:id="@+id/guardText"
        android:layout_width="229dp"
        android:layout_height="56dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="91dp"
        android:fontFamily="sans-serif"
        android:includeFontPadding="true"

        android:text="GUARD LOGIN"
        android:textAlignment="center"
        android:textColor="#191970"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guardView"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/wardenView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="219dp"
        android:background="@drawable/warden"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guardText"
        tools:srcCompat="@drawable/warden" />

    <TextView
        android:id="@+id/wardenText"
        android:layout_width="229dp"
        android:layout_height="56dp"
        android:layout_marginStart="91dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="163dp"
        android:fontFamily="sans-serif"
        android:text="WARDEN LOGIN"
        android:textAlignment="center"
        android:textColor="#191970"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wardenView"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>